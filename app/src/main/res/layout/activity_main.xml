<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorAccent"
            android:id="@+id/LAYOUT_STABLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAYOUT_STABLE" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorAccent"
            android:id="@+id/LAYOUT_HIDE_NAVIGATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAYOUT_HIDE_NAVIGATION" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorAccent"
            android:id="@+id/LAYOUT_FULLSCREEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAYOUT_FULLSCREEN" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorAccent"
            android:id="@+id/HIDE_NAVIGATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIDE_NAVIGATION" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorAccent"
            android:id="@+id/FULLSCREEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FULLSCREEN" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorAccent"
            android:id="@+id/IMMERSIVE_STICKY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMMERSIVE_STICKY" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:id="@+id/LAYOUT_STABLE_OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAYOUT_STABLE" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:id="@+id/LAYOUT_HIDE_NAVIGATION_OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAYOUT_HIDE_NAVIGATION" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:id="@+id/LAYOUT_FULLSCREEN_OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAYOUT_FULLSCREEN" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:id="@+id/HIDE_NAVIGATION_OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIDE_NAVIGATION" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:id="@+id/FULLSCREEN_OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FULLSCREEN" />

        <Button
            android:onClick="setUIFlags"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:id="@+id/IMMERSIVE_STICKY_OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMMERSIVE_STICKY" />
    </LinearLayout>

</LinearLayout>